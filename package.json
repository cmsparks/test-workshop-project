{
	"name": "demo-app",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "remix vite:build",
		"deploy": "npm run build && wrangler pages deploy",
		"dev": "remix vite:dev",
		"lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
		"formatcheck": "prettier --check \"**/*.{ts,tsx,md}\"",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"start": "wrangler pages dev ./build/client",
		"typecheck": "tsc",
		"typegen": "wrangler types",
		"preview": "npm run build && wrangler pages dev",
		"test:e2e": "playwright test",
		"test:e2e:ui": "npm run test:e2e --ui",
		"test:ct": "playwright test -c playwright-ct.config.ts",
		"test:vitest": "vitest run",
		"build:mocks": "wrangler deploy --minify --outdir ./dist --dry-run --name 'mock-ai' --compatibility-date '2024-03-12' ./card-manager/test/ai.mock.ts"
	},
	"dependencies": {
		"@remix-run/cloudflare": "^2.11.1",
		"@remix-run/cloudflare-pages": "^2.11.1",
		"@remix-run/react": "^2.11.1",
		"canvas-confetti": "^1.9.3",
		"isbot": "^4.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240815.0",
		"@playwright/experimental-ct-react": "^1.47.0",
		"@playwright/test": "^1.47.0",
		"@remix-run/dev": "^2.11.1",
		"@types/canvas-confetti": "^1.6.4",
		"@types/node": "^22.4.0",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.38.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"postcss": "^8.4.38",
		"typescript": "^5.1.6",
		"vite": "^5.1.0",
		"vite-tsconfig-paths": "^4.2.1",
		"wrangler": "^3.72.0",
		"prettier": "^3.3.3",
		"vitest": "1.5.x",
		"@vitest/ui": "1.5.x",
		"@cloudflare/vitest-pool-workers": "^0.4.23"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
